<?xml version="1.0" encoding="UTF-8" ?>

<themeeditor>
	<version value="1.4">
	<ccc available="true" />
	<guest_checkout available="true" />
	<one_page_checkout available="true" />
	<store_locator available="true" />
	</version>
	<author>themelexus</author>
	<name>Live Theme Editor</name>
	<selectors>
		<items>
			<header>Body Content</header>
			<match>body</match>
			<item>
				<type>text</type>
				<label>Background Color</label>
				<selector>body</selector>
				<attrs>background-color</attrs>
			</item>
			<item>
				<type>image</type>
				<label>Background Image</label>
				<selector>body</selector>
				<attrs>background-image</attrs>
			</item>

		 	<item>
				<type>fontsize</type>
				<label>Font-Size</label>
				<selector>body</selector>
				<attrs>font-size</attrs>
			</item>

			<item>
				<type>fontfamily</type>
				<label>Font-Family</label>
				<selector>body</selector>
				<attrs>font-family</attrs>
			</item>

		</items>
		<items>
			<header>Header</header>
			<match>header</match>
            <item>
                <type>text</type>
                <label>Bg Color topbar</label>
                <selector>#topbar</selector>
                <attrs>background-color</attrs>
            </item>
            <item>
                <type>image</type>
                <label>Bg Image Topbar</label>
                <selector>#topbar</selector>
                <attrs>background-image</attrs>
            </item>
			<item>
				<type>text</type>
				<label>Background </label>
				<selector>header</selector>
				<attrs>background-color</attrs>
			</item>
			<item>
				<type>image</type>
				<label>Background Image</label>
				<selector>header</selector>
				<attrs>background-image</attrs>
			</item>
            <item>
                <type>text</type>
                <label>Text color</label>
                <selector>#topbar button span, header .phone</selector>
                <attrs>color</attrs>
            </item>
            <item>
                <type>text</type>
                <label>Link color</label>
                <selector>#topbar .list-inline a</selector>
                <attrs>color</attrs>
            </item>
            <item>
                <type>text</type>
                <label>Icon color</label>
                <selector>#topbar .btn-link i</selector>
                <attrs>color</attrs>
            </item>
		</items>

		<items>
			<header>Main Menu</header>
			<match>navbar-mega</match>

			<item>
				<type>text</type>
				<label>Background menu</label>
				<selector>.navbar-mega</selector>
				<attrs>background-color</attrs>
			</item>
			<item>
				<type>image</type>
				<label>Background Image</label>
				<selector>.navbar-mega</selector>
				<attrs>background-image</attrs>
			</item>

			<item>
				<type>text</type>
				<label>Color link menu</label>
				<selector>.navbar-mega .navbar-nav li a</selector>
				<attrs>color</attrs>
			</item>

			<item>
				<type>text</type>
				<label>Background sub menu</label>
				<selector>.navbar-mega .navbar-nav li .dropdown-menu</selector>
				<attrs>background-color</attrs>
			</item>
			<item>
				<type>image</type>
				<label>Background sub Image</label>
				<selector>.navbar-mega .navbar-nav li .dropdown-menu</selector>
				<attrs>background-image</attrs>
			</item>
            <item>
                <type>text</type>
                <label>Color heading</label>
                <selector>.navbar-mega .widget-heading</selector>
                <attrs>color</attrs>
            </item>
			<item>
				<type>text</type>
				<label>Color link sub menu</label>
				<selector>.navbar-mega .navbar-nav li .dropdown-menu li a</selector>
				<attrs>color</attrs>
			</item>
		</items>

		<items>
			<header>Footer</header>
			<match>footer</match>
			<item>
				<type>text</type>
				<label>Background footer</label>
				<selector>footer, .copyright, footer .footer-bottom, footer .footer-top, footer .footer-center</selector>
				<attrs>background-color</attrs>
			</item>
			<item>
				<type>image</type>
				<label>Background Image</label>
				<selector>footer, .copyright, footer .footer-bottom, footer .footer-top, footer .footer-center</selector>
				<attrs>background-image</attrs>
			</item>
			<item>
				<type>text</type>
				<label>Background powered</label>
				<selector>.copyright</selector>
				<attrs>background-color</attrs>
			</item>
			<item>
				<type>image</type>
				<label>Bg Image powered</label>
				<selector>.copyright</selector>
				<attrs>background-image</attrs>
			</item>
			<item>
				<type>text</type>
				<label>Color heading</label>
				<selector>footer .panel-title</selector>
				<attrs>color</attrs>
			</item>
			<item>
				<type>text</type>
				<label>Text Color</label>
				<selector>.copyright, .content-html, footer p,.form-newsletter .description </selector>
				<attrs>color</attrs>
			</item>

			<item>
				<type>text</type>
				<label>Link color</label>
				<selector>footer a, .copyright a,footer .list-unstyled li a</selector>
				<attrs>color</attrs>
			</item>
		</items>

	</selectors>

	<elements>
		<items>
			<header>Products</header>
			<match>product</match>
			<item>
				<type>text</type>
				<label>Color Sale</label>
				<selector>.product-label</selector>
				<attrs>color</attrs>
			</item>
            <item>
                <type>text</type>
                <label>Bg Sale</label>
                <selector>.product-label, .product-label .product-label-special:before</selector>
                <attrs>background-color</attrs>
            </item>
			<item>
				<type>text</type>
				<label>Product Name</label>
				<selector>.product-block .name a</selector>
				<attrs>color</attrs>
			</item>

			<item>
				<type>text</type>
				<label>Color Price New</label>
				<selector>.price .price-new</selector>
				<attrs>color</attrs>
			</item>
	 		<item>
				<type>text</type>
				<label>Color Price Old</label>
				<selector>.price .price-old</selector>
				<attrs>color</attrs>
			</item>
            <item>
                <type>text</type>
                <label>Color Cart</label>
                <selector>.product-block.product-v1 .cart .btn,.product-block.product-v1 .cart .btn i</selector>
                <attrs>color</attrs>
            </item>
            <item>
                <type>text</type>
                <label>Border Cart</label>
                <selector>.product-block.product-v1 .cart .btn</selector>
                <attrs>border-color</attrs>
            </item>
			<item>
				<type>text</type>
				<label>Color icon</label>
				<selector>.product-block.product-v1 .btn-style</selector>
				<attrs>color</attrs>
			</item>

		</items>

	</elements>
</themeeditor>
